{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Write Better",
  "version": "0.1.0",
  "identifier": "com.ryomaejima.writebetter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1424",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Write Better",
        "width": 672,
        "height": 416,
        "resizable": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
